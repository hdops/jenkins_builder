def node=""
if (env.node){
    node =env.node
}else{
    node ="develop"
}

def run_on_public="None"
if (env.run_on_public){
    run_on_public=env.run_on_public
}
if (!env.on_k8s){
    env.on_k8s="False"
}
if (env.set_on_k8s) {
    env.on_k8s=env.set_on_k8s
}
pipeline {
	agent {
			    docker {
			    label node
			    image "harbor.qianfan123.com/toolset/toolsetcore:0.3.0"
			    args '-v /var/run/docker.sock:/var/run/docker.sock -v /usr/bin/docker:/usr/bin/docker --add-host=hd-hz-public.oss-cn-hangzhou-internal.aliyuncs.com:47.110.23.37'
			    }
             }
    options {
	    timeout(time: 1, unit: 'HOURS')
    } 
    stages {
        stage('delete workspace') {
            steps{
                deleteDir()
            }
        }
        stage('download_toolset'){ 
			steps{
                echo "active profile is ${DNET_PROFILE}"
                echo "workspace is $WORKSPACE"
                retry(3){
                    sh "set +x;TRUST_PUBLIC_IP=${run_on_public} hdops download_toolset --branch ${build_branch} -p ."
                }
                sh "tar zxf toolset.tar.gz -C $WORKSPACE"
			}
		}
        stage('createResourcePackage'){ 
			steps{
               sh "DNET_PROFILE=${params.DNET_PROFILE} hdmon create_resource_package --download_url ${params.BUILD_URL} --fromversion ${params.fromVersion} --toversion ${params.toVersion} --alias ${params.alias} --subsystem ${params.subsystem}"
			}
		}
    }
    post{
        always{
            currentBuild.description = "${params.DNET_PROFILE}:${params.subsystem}"
        }
    }
}
