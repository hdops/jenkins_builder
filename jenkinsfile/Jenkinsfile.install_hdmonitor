// 该 def run_on_public="None"
if (env.run_on_public){
    run_on_public=env.run_on_public
}
pipeline 已过时
def nodes=["master"]
if (env.node){
    nodes =env.node.split(',')
}

nodes.each{ n->
    node(n){
        stage('uninstall and install on '+n){
            sh 'pip uninstall -y hdmonitor'
            sh 'pip install -i http://mirrors.qianfan123.com/root/hdops --trusted-host mirrors.qianfan123.com hdmonitor'
        }
    }

}                                               
