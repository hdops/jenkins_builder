def node=""
if (env.node){
    node =env.node
}else{
    node ="master"
}
def whether_post="False"
if (env.whether_post){
    whether_post =env.whether_post
}

def toolset_image_version="0.3.0"
if (env.toolset_image_version){
    toolset_image_version = env.toolset_image_version
}

def run_on_public="None"
if (env.run_on_public){
    run_on_public=env.run_on_public
}
if (!env.on_k8s){
    env.on_k8s="False"
}
if (env.set_on_k8s) {
    env.on_k8s=env.set_on_k8s
}
pipeline {
    agent {label node}
	options {
	    timeout(time: 5, unit: 'MINUTES')
    }
    stages {
        stage('更新jenkins_config') {
			steps{
				script {
                    echo "workspace is $WORKSPACE"
                    deleteDir()

                    git branch: "${params.GIT_BRANCH}", credentialsId: '17643215-09f8-4a9a-b0ea-c8e49777ce1d', url: "http://github.app.hd123.cn:10080/${GIT_GROUP}/${GIT_REPONAME}.git"


                    if(env.on_k8s == 'True'){
                        container("hdtoolsetcore"){
                            sh "git submodule foreach "git pull origin master""
                            sh "sh config/jenkins_config_update.sh"
                        }
                    }else{
                        docker.image("harbor.qianfan123.com/toolset/toolsetcore:${toolset_image_version}").inside  {
                            sh "git submodule foreach "git pull origin master""
                            sh "sh config/jenkins_config_update.sh"
                        }
                    }
                }
            }
		}
     }
}
