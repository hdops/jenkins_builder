def node=""
if (env.node){
    node =env.node
}else{
    node ="master"
}
if (!env.GIT_GROUP){
    env.GIT_GROUP="phoenix-config"
}
pipeline {
    agent {label node}
	options {
	//     buildDiscarder(logRotator(numToKeepStr: '10'))
	//     disableConcurrentBuilds()
	//     disableResume()
	    timeout(time: 120, unit: 'MINUTES')
    }
	// parameters {
	//     string(name: 'GIT_REPONAME', defaultValue: 'heading', description: 'phoenix_template git repo name',trim: true)
	//     string(name: 'GIT_BRANCH', defaultValue: 'uat', description: 'phoenix_template git branch',trim: true)
	//     choice(name: 'dryrun', choices:'False\nTrue', description: 'True只打印命令，不执行 False执行命令')
	// }
    stages {
	    stage('delete workspace') {
			steps{
				deleteDir()
			}
        }
        stage('下载phoenix_template') {
			steps{
                git branch: "${params.GIT_BRANCH}", credentialsId: '17643215-09f8-4a9a-b0ea-c8e49777ce1d', url: "http://gitlab.app.hd123.cn:10080/${GIT_GROUP}/${params.GIT_REPONAME}.git"
			}
        }
        stage('container restart') {
            steps {
                dir("${params.container_restart_workspace}") {
                    sh "phoenix-tools container_restart --need_restart_container ${params.need_restart_container} --dryrun ${params.dryrun}"
                }
            }
        }
    }
}